generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  PENDING
  APPROVED
}

model Account {
  id                Int    @id @default(autoincrement())
  name              String
  address           String
  phoneNumber       String
  bankAccountNumber Int?

  Payments Payment[]
}

model Payment {
  id     Int     @id @default(autoincrement())
  amount Float
  notes  String?
  accountId Int

  status  PaymentStatus @default(PENDING)
  Account Account       @relation(fields: [accountId], references: [id])
}
